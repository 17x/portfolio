{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "app/*.ts",
    "components/*.ts",
    "global/*.ts",
    "hooks/*.ts",
    "tpyes/*.ts",
    "utils/*.ts",
//    "**/*.tsx",
//    "/Users/yahone/projects/lucasischow.github.io/docs/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
//    "public",
//    "out",
  ]
}
